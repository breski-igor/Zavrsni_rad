@using Microsoft.AspNetCore.Identity
@using trainingAttendanceTracker.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - trainingAttendanceTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/pics/ARROW.jpg" alt="arrow_logo" height="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Schedule" asp-action="Index">
                                Schedule
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Gallery" asp-action="Index">
                                Gallery
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Attendance" asp-action="TrainingLog">
                                    Training Log
                                </a>
                            </li>

                            var user = await UserManager.GetUserAsync(User);
                            var roles = await UserManager.GetRolesAsync(user);

                            @if (roles.Contains("Admin") || roles.Contains("Trainer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Attendance" asp-action="Scan">
                                        Scan
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Membership" asp-action="Management">
                                        Fee Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Attendance" asp-action="Calendar">
                                        Calendar
                                    </a>
                                </li>
                            }

                            @if (roles.Contains("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        Membership
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Membership" asp-action="Management">Fee Management</a></li>
                                        <li><a class="dropdown-item" asp-controller="Membership" asp-action="Balance">Balance Overview</a></li>
                                        <li><a class="dropdown-item" asp-controller="Membership" asp-action="Payments">Payment Management</a></li>
                                        <li><a class="dropdown-item" asp-controller="Membership" asp-action="FinancialSummaryRange">Financial Report</a></li>
                                        <li><a class="dropdown-item" asp-controller="Membership" asp-action="PriceManagement">Price Management</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="UserManagement">User Management</a></li>
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Members</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">JJK ARROW</h5>
                    <p class="mb-2">
                        Ulica Huga Badalića 7A, Zagreb, Croatia, 10000
                    </p>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3">Follow Us</h5>
                    <div class="social-links">
                        <a href="https://www.facebook.com/JJKArrow/" target="_blank" class="text-white me-3">
                            Facebook
                        </a>
                        <a href="https://www.instagram.com/jjk.arrow/" target="_blank" class="text-white">
                            Instagram
                        </a>
                    </div>
                </div>
            </div>
            <hr class="my-3" style="border-color: rgba(255,255,255,0.1);">
            <div class="text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year - JJK ARROW. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>