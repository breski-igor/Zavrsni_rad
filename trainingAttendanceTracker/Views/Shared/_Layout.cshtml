@using Microsoft.AspNetCore.Identity
@using trainingAttendanceTracker.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - trainingAttendanceTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/trainingAttendanceTracker.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-dumbbell me-1"></i> TrainingAttendanceTracker
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Schedule" asp-action="Index">
                        <i class="fas fa-users"></i> Schedule
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Gallery" asp-action="Index">
                        <i class="fas fa-images"></i> Gallery
                    </a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Attendance" asp-action="TrainingLog">
                            <i class="fas fa-chart-line"></i> Training Log
                        </a>
                    </li>

                    var user = await UserManager.GetUserAsync(User);
                    var roles = await UserManager.GetRolesAsync(user);

                    @if (roles.Contains("Admin") || roles.Contains("Trainer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Attendance" asp-action="Scan">
                                <i class="fas fa-qrcode"></i> Scan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Membership" asp-action="Management">
                                <i class="fas fa-chart-line"></i> Fee Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Attendance" asp-action="Calendar">
                                <i class="fas fa-calendar"></i> Calendar
                            </a>
                        </li>
                    }

                    @if (roles.Contains("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                Membership
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Membership" asp-action="Management">Fee Management</a></li>
                                <li><a class="dropdown-item" asp-controller="Membership" asp-action="Balance">Balance Overview</a></li>
                                <li><a class="dropdown-item" asp-controller="Membership" asp-action="Payments">Payment Management</a></li>
                                <li><a class="dropdown-item" asp-controller="Membership" asp-action="FinancialSummaryRange">Financial Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Membership" asp-action="PriceManagement">Price Management</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="UserManagement">User Management</a></li>
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Members</a></li>
                            </ul>
                        </li>
                    }
                }
            </ul>

            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - trainingAttendanceTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>